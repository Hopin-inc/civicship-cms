generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views", "typedSql", "relationJoins", "prismaSchemaFolder"]
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x"]
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("APP_DB_URL")
}

enum PublishStatus {
  PUBLIC
  COMMUNITY_INTERNAL
  PRIVATE
}

enum Source {
  INTERNAL
  EXTERNAL
}
